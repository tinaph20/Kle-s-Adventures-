using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class enemyPatrol : MonoBehaviour
{
    // Public Variables 
    public GameObject pointZero;
    public GameObject pointOne;
    public float speed;

    // Private Variables
    private Rigidbody2D rb;
    private Transform currentPoint;

    // Start is called before the first frame update
    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
        currentPoint = pointOne.transform; 
    }

    // Update is called once per frame
    void Update()
    {
        Vector2 point = currentPoint.position - transform.position;

        if(currentPoint == pointOne.transform)
        {
            rb.velocity = new Vector2(speed, 0);
        }
        else
        {
            rb.velocity = new Vector2(-speed, 0);
        }

        if(Vector2.Distance(transform.position, currentPoint.position) < 0.5f && currentPoint == pointOne.transform)
        {
            flip();
            currentPoint = pointZero.transform; 
        }
        if(Vector2.Distance(transform.position, currentPoint.position) < 0.5f && currentPoint == pointZero.transform)
        {
            flip();
            currentPoint = pointOne.transform; 
        }
    }

    private void flip()
    {
        Vector3 localScale = transform.localScale;
        localScale.x *= -1;
        transform.localScale = localScale;
    }
    
    private void OnDrawGizmos()
    {
        Gizmos.DrawWireSphere(pointZero.transform.position, 0.5f);
        Gizmos.DrawWireSphere(pointOne.transform.position, 0.5f);
        Gizmos.DrawLine(pointZero.transform.position, pointOne.transform.position);
    }
}
